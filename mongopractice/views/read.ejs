<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="p-5 main w-full min-h-screen bg-zinc-900 text-white">
    <a class="text-blue-500" href="/">back to home</a>
    <h1 class="text-3xl tracking-tighter mb-3 mt-5">All Users</h1>

    <!-- FLEX WRAPPER for all users -->
    <div class="flex flex-wrap gap-5 mt-5">
      <% Users.forEach(function(user) { %>
        <div class="users w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 bg-zinc-700 overflow-hidden rounded-lg">
            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="User Image" />
          </div>
          <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
          <div class="text-zinc-500"><%= user.email %></div>
          <div class="flex gap-3 mt-10">
            <a href="/edit/<%= user._id %>" class="text-zinc-200">Edit User</a>
            <a href="/delete/<%= user._id %>" class="text-red-500">Delete User</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  <script src="/javascripts/script.js"></script>
</body>
</html>
