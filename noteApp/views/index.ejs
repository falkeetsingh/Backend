<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none " type="text" placeholder="enter something here" name="title">
                <textarea placeholder="write task details here"  class="block mt-2 px-5 py-2 bg-zinc-800 resize-none w-full rounded-md outline-none"  name="details"> </textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create task">
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap"> 
            <% if(files.length>0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 rounded-md px-3 py-4 bg-zinc-800">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1> <!--for printing add = s-->
                    <div class="flex w-full justify-between items-center mt-3 ">
                        <a class="text-blue-500 inline-block " href="/file/<%= val %>">Read More</a>
                        <a class="text-zinc-300" href="/edit/<%= val %>">Edit</a>
                    </div>
            </div>
                <% })%> 
            <%} else{ %>
                <h1 class="text-zinc-600">no tasks yet</h1>
            <% }%>
            
    </div>
    </div>
    <script src="/javascripts/script.js"></script>
</body>
</html>